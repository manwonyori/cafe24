# Cafe24 API Configuration
# Copy this file to .env and fill in your actual values

# Required: Your Cafe24 Mall ID
CAFE24_MALL_ID=your_mall_id

# Required: OAuth Client Credentials
CAFE24_CLIENT_ID=your_client_id
CAFE24_CLIENT_SECRET=your_client_secret

# Optional: API Version (default: 2025-06-01)
CAFE24_API_VERSION=2025-06-01

# Optional: Cache Configuration
CAFE24_CACHE_ENABLED=true
CAFE24_CACHE_TTL=3600  # Cache time-to-live in seconds

# Optional: Retry Configuration
CAFE24_RETRY_COUNT=3
CAFE24_RETRY_DELAY=2  # Delay between retries in seconds

# Optional: Logging
CAFE24_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
CAFE24_LOG_FILE=logs/cafe24_system.log

# Optional: Auto-install missing packages
CAFE24_AUTO_INSTALL=false

# Optional: Token Storage
CAFE24_TOKEN_FILE=config/oauth_token.json

# For Docker deployment
CAFE24_ENV=development  # development, staging, production